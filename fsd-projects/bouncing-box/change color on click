                <script>

                        // Array of colors to cycle through
                        const colors = [
                        '#e57373', // red
                        '#81c784', // green
                        '#64b5f6', // blue
                        '#ffd54f', // yellow
                        '#ba68c8', // purple
                        '#ff8a65', // orange
                        '#4dd0e1', // cyan
                        '#f8bbd0', // pink
                        '#d7ccc8', // brown/gray
                        '#212121' // black
                        ];
                        let colorIndex = 0;

                        document.body.addEventListener('click', function() 
                        {
                                colorIndex = (colorIndex + 1) % colors.length;
                                document.body.style.background = colors[colorIndex];
                        });
                        // Set initial color
                        document.body.style.background = colors[colorIndex];

                </script>

